!!!
%html
  %head
    %title
      = content_for?(:title) ? yield(:title) : "Alpha"
    // HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      %script{ :src => "http://html5shim.googlecode.com/svn/trunk/html5.js" }
    = stylesheet_link_tag "application", "http://code.leafletjs.com/leaflet-0.3.1/leaflet.css", "http://code.leafletjs.com/leaflet-0.3.1/leaflet.ie.css"
    = javascript_include_tag "application"
    = csrf_meta_tags

    = yield :head
  %body.landing
    %header
		%h1 CSA Builder
		%h2 Help start a CSA by telling us where you would pick up food
	.content
		#map-canvas
		.form
			%form.form-horizontal
				%fieldset
					.control-group
						%label.control-label{:for => "input-name"} Name
						.controls
							%input.input-xlarge#input-name
							%p.help-block
				%fieldset
					.control-group
						%label.control-label{:for => "input-email"} Email
						.controls
							%input.input-xlarge#input-email
							%p.help-block
				.location-controls
					.location-title Where would you pick up food? 
					.location-hint Drag this pin onto the map to add a location


